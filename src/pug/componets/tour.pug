                        .mx-auto.d.mx-xl-0.d-flex.align-items-center.flex-column.flex-sm-row
                            button(type="button").btn.btn-warning.text-uppercase.text-white.mb-2.mb-sm-0 замовити тур
                            button(type="button").btn.btn-outline-primary.text-uppercase.text-primary детальніше
                    .tour__price.text.text-center.primary.col-12.col-xl-5
                        span.text-primary.tour__p 575 грн./день
