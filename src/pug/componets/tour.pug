section.tour 
    .container.tour__container
        .row.gy-4
            .tour__image.col-12.col-xl-4.mx-auto
               img(src="img/tour.jpg", alt="Дивовижний безлюдний острів, який зводить людей з розуму")
            .tour__blocl.col-12.col-xl-8
                p.tour__title.fs-1.text-black.text-uppercase.text-center.text-xl-start Дивовижний безлюдний острів, який зводить людей з розуму
                .tour__desc.row.gy-5
                    .tour__item.col-12.col-xl-7
